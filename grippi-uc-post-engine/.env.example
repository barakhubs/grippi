# Example Environment Variables
# Copy this file to .env and update with your values

# ====================================
# API Configuration
# ====================================
# For local development:
VITE_API_BASE_URL=http://localhost:8082/GrippiNETPostgreSQL

# For production:
# VITE_API_BASE_URL=https://api.grippi.com

# ====================================
# App Configuration
# ====================================
VITE_APP_NAME=Grippi Post Engine

# Enable console logging (true/false)
VITE_ENABLE_LOGGING=true

# ====================================
# Feature Flags
# ====================================
# Use mock API for testing without backend (true/false)
# Set to false when your backend is ready
VITE_USE_MOCK_API=true

# ====================================
# Dropbox Configuration
# ====================================
# Dropbox access token for file uploads
VITE_DROPBOX_ACCESS_TOKEN=YOUR_DROPBOX_ACCESS_TOKEN_HERE
